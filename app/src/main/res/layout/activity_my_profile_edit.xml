<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff6b6b"
    android:orientation="vertical"
    tools:context=".MyProfileEditActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        android:gravity="left"
        android:text="프로필 수정"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/UpdateUserImg"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"

            android:src="@drawable/profiledefalut" />

        <Button
            android:id="@+id/btnUpdateUserImg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="프로필 사진 변경" />

    </LinearLayout>

    <EditText
        android:id="@+id/etEditUserMessage"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/text_border"
        android:ems="10"
        android:hint="변경할 소개글을 작성하세요 !"
        android:maxLength="50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnNotProUpdate"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="55dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_clear" />

        <ImageView
            android:id="@+id/btnActionProUpdate"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_check" />
    </LinearLayout>


</LinearLayout>